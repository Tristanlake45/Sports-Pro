@model SportsPro.Models.Incident

@{
    ViewData["Title"] = "Delete Incident";
}

<h1>Delete Incident</h1>

<div class="alert alert-warning">
    <p class="mb-2">Are you sure you want to delete this incident?</p>
    <strong>@Model.Title</strong>
    <div class="mt-2">
        <small>Date Opened: @Model.DateOpened.ToString("d")</small>
    </div>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
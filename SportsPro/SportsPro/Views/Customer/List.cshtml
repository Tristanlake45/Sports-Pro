@model IEnumerable<SportsPro.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<h1>Customers</h1>

<p>
    <a asp-action="Add" class="btn btn-primary">Add Customer</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>City</th>
            <th>State</th>
            <th>Country</th>
            <th>Email</th>
            <th>Phone</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.FirstName @c.LastName</td>
            <td>@c.City</td>
            <td>@c.State</td>
            <td>@c.CountryID</td>
            <td>@c.Email</td>
            <td>@c.Phone</td>
            <td class="text-nowrap">
                <a asp-action="Edit" asp-route-id="@c.CustomerID">Edit</a> |
                <a asp-action="Delete" asp-route-id="@c.CustomerID">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>